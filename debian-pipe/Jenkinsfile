pipeline {
    agent {
        dockerfile { dir 'debian-pipe/docker/ubuntu_16_04_x86_64' }
    }
    stages {
        stage('Build') {
            steps {
                sh 'rm *.deb'
                sh "python lib/make_deb.py --tag=${params.tag} --templates-directory=debian-pipe/templates"
            }
            post {
                success {
                    archive '*.deb'
                }
            }
        }
        stage('Deploy') {
            when {
                expression { params.deploy == true }
            }
            steps {
                sshagent (credentials: ['jenkins_ssh_key']) {
                    sh "
                        mkdir /home/jenkins/.ssh;
                        chmod 700 /home/jenkins/.ssh;
                        ssh-keyscan -t rsa ${params.deploy_host} > /home/jenkins/.ssh/known_hosts;
                        scp *.deb jenkins@${params.deploy_host}:${params.deploy_folder};
                    "
                }
            }
        }
    }
}