pipeline {
    agent any
    stages {
        stage('Build') {
            agent {
                dockerfile { dir 'docker/ubuntu_16_04_x86_64' }
            }
            steps {
                sh 'python build_jtreg.py'
            }
            post {
                success {
                    archive 'jtreg.zip'
                }
            }
        }
    }
}