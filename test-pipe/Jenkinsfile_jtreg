pipeline {
    agent {
        dockerfile { dir 'test-pipe/docker/ubuntu_16_04_x86_64' }
    }
    stages {
        stage('Build') {
            steps {
                sh '''
                    python test-pipe/build_jtreg.py --build-tip
                '''
            }
            post {
                success {
                    archive 'jtreg.zip'
                }
            }
        }
    }
}